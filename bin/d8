#!/bin/bash
cmd=$(find.bin d8)
if [ "$cmd" = "" ]; then
  mkdir -p ~/bin
  curl -L https://github.com/deckhouse/deckhouse-cli/releases/download/v0.13.2/d8-v0.13.2-linux-amd64.tar.gz | tar -xz -C ~/bin/ --strip-components=2 linux-amd64/bin/d8
  cmd=$(find.bin d8)
fi
if [ "$cmd" != "" ]; then
  if [[ "$cmd" != /home* ]] && [ "$EUID" -ne 0 ]; then
    exec sudo $cmd "$@"
  else
    exec $cmd "$@"
  fi
fi
